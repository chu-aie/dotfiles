# log_task "Restoring dotfiles from backup with autorestic"
# {{- if and (.autorestic.enabled) (.autorestic.restore_dotfiles) }}
# dotfiles-restore hash: {{ include "dot_local/bin/executable_dotfiles-restore.tmpl" | sha256sum }}
dotfiles-restore
