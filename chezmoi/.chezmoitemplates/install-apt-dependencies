# shellcheck shell=bash

log_task "Installing APT dependencies"

# import the Google Cloud Platform public key just in case we need it
c curl -s https://packages.cloud.google.com/apt/doc/apt-key.gpg | sudo apt-key add - || true

# We need to install ca-certificates before we add the APT repos, because some of them
# may use newer CAs.
# Ignore apt update error if it is due to expired certificate (because chances are that
# the next command will fix it.
if output="$(sudo apt update --yes)" || [[ "${output}" == *"The certificate chain uses expired certificate."* ]]; then
  echo "${output}"
  true
else
  echo "${output}"
  exit 1
fi
c sudo apt install --yes -qq -o=Dpkg::Use-Pty=0 --no-install-recommends ca-certificates apt-transport-https curl gnupg
