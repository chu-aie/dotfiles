#!/bin/bash

set -euo pipefail

# read authorized_keys from stdin
keys=$(cat /dev/stdin)

# if authorized_keys is empty, set it to empty string
if [[ -z "${keys}" ]]; then
  keys=''
fi

# {{ if .github.username }}
# {{ range gitHubKeys .github.username }}
keys="${keys}\n{{ .Key }}"
# {{ end }}
# {{ end }}

# remove empty lines
keys=$(echo -e "${keys}" | sed '/^$/d')

# remove duplicate lines
keys=$(echo -e "${keys}" | sort -u)

echo -e "${keys}"
